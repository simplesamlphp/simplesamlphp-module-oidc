{% extends "@oidc/oidc_base.twig" %}

{% set pagetitle = 'Install OpenID Connect Module' | trans %}

{% block content %}
    <h2>{{ pagetitle }}</h2>

    <div class="ui hidden divider"></div>

    <div class="ui attached message">
        <div class="header">
            {{ '{oidc:install}'|trans }}
        </div>
        <p>{{ '{oidc:install:description}'|trans }}</p>
    </div>
    <form class="ui form attached fluid segment" method="post">
        {% if oauth2_enabled %}
        <div class="field">
            <label for="oauth2Migrate">{{ '{oidc:install:oauth2}'|trans }}</label>
            <input id="oauth2Migrate" type="checkbox" value="{{ oauth2_enabled }}" name="oauth2_migrate">
        </div>
        {% endif %}
        <input type="hidden" value="1" name="migrate"/>
        <div class="ui buttons">
            <button type="submit"  class="ui small primary labeled icon button">
                <i class="puzzle piece  icon"></i> {{ '{oidc:install}'|trans }}
            </button>
            <a href="{{ moduleURL('oidc/admin-clients/index.php') }}" class="ui small secondary labeled icon button">
                <i class="arrow left icon"></i> {{ '{oidc:return}'|trans }}
            </a>
        </div>
    </form>
{% endblock %}
